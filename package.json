{
  "name": "identity-styleguide",
  "author": "Tyler Childs",
  "contributors": [
    "Tyler Childs <tylerwchilds@gmail.com>"
  ],
  "description": "Identity.com Styleguide.",
  "homepage": "https://identity-dev.github.io/styleguide/",
  "version": "2.0.7",
  "repository": {
    "type": "git",
    "url": "git://github.com/identity-dev/styleguide.git"
  },
  "dependencies": {
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-clean": "^0.3.2",
    "gulp-concat": "^2.6.1",
    "gulp-cssmin": "^0.2.0",
    "gulp-exec": "^2.1.3",
    "gulp-git": "^2.4.2",
    "gulp-include": "^2.3.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-stylelint": "^5.0.0",
    "gulp-swig": "^0.8.0",
    "kss": "2.4.0",
    "run-sequence": "^2.2.0"
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "declaration-colon-space-after": "always",
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "max-empty-lines": 2,
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s"
      ]
    }
  },
  "scripts": {
    "start": "yarn install && gulp",
    "push:tag": "git push --tags origin HEAD:master",
    "release": "yarn install && gulp compile",
    "release:patch": "npm run release && npm version patch && npm run push:tag",
    "release:minor": "npm run release && npm version minor && npm run push:tag",
    "release:major": "npm run release && npm version major && npm run push:tag"
  }
}
